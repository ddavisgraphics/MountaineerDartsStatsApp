<p id="notice"><%= notice %></p>

<h1>Season Standings</h1>

<%# <div class="lead"> 
  TO GENERATE NEW STATS GO TO `standings/generate/season_id` 
</div> 
<br> %>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Team</th>
      <th>Division</th>
      <th>Wins</th>
      <th>Losses</th>
      <th>Points</th>
    </tr>
  </thead>

  <tbody>
    <% @season_standings.each do |season_standing| %>
      <tr>
        <td><%= link_to season_standing[:team], edit_season_standing_path(season_standing[:id]) %></td>
        <td><%= season_standing[:division] %></td>
        <td><%= season_standing[:wins] %> </td>
        <td><%= season_standing[:losses] %></td>
        <td><%= season_standing[:points] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

