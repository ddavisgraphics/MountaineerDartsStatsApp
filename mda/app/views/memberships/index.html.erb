<p id="notice"><%= notice %></p>

<h1>Memberships</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Team</th>
      <th>Players</th>
      <th>Captain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.team.name unless membership.team.nil? %></td>
        <td><%= membership.player.name unless membership.player.nil? %></td>
        <td><%= membership.captain unless membership.captain.nil? %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

