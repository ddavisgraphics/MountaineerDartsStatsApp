<%= form_with(model: membership, local: true) do |form| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
        <% membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :team_id %>
    <%= form.select :team_id, Team.all.collect {|x| [x.name, x.id]}, {prompt: 'Select Team'} %>
  </div>

  <div class="field">
    <%= form.label :player_id %>
     <%= form.select :player_id, Player.all.order('name').collect {|x| [x.name, x.id]}, {prompt: 'Select Player'} %>
  </div>

  <div class="field">
    <%= form.label :season_id %>
    <%= form.select :season_id, Season.all.collect {|x| [x.name, x.id]}, {prompt: 'Select Season'} %>
  </div>

  <div class="field">
    <%= form.label :captain %>
    <%= form.check_box :captain %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
